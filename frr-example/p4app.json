{
  "p4_src": "forwarding.p4",
  "cli": true,
  "pcap_dump": false,
  "enable_log": false,
  "topology": {
    "assignment_strategy": "manual-frr",
    "links": [["h1", "s1"], ["h2", "s2"], ["s1", "s2"], ["s1", "r1"], ["s2", "r2"], ["r1", "r2"], ["h1", "r1"], ["h2", "r2"]],
    "hosts": {
      "h1": {
        "ip": "10.1.0.1/24",
        "defaultRoute": "via 10.1.0.2"
      },
      "h2": {
        "ip": "10.2.0.1/24",
        "defaultRoute": "via 10.2.0.2"
      }
    }
    ,
    "switches": {
      "s1": {
        "cli_input": "s1-commands.txt"
      },
      "s2": {
        "cli_input": "s2-commands.txt"
      }
    }
    ,
    "routers": {
      "r1" :{
        "conf_path": "./routers_conf/", 
        "daemons" : {
        "zebra": {},
        "ospfd": {}
       }
      }
      ,
      "r2" :{
        "conf_path": "./routers_conf/", 
        "daemons" : {
          "zebra": {},
          "ospfd": {}
        }        
      }
    } 
  }
}