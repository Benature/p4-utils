{
  "p4_src": "forwarding.p4",
  "cli": true,
  "pcap_dump": false,
  "enable_log": false,
  "topology": {
    "assignment_strategy": "manual-frr",
    "links": [["h1", "s1"], ["h2", "s2"], ["s1", "s2"], ["s1", "r1"], ["s2", "r2"]],
    "hosts": {
      "h1": {
        "ip": "10.0.1.2/24",
        "defaultRoute": "via 10.0.1.1"
      },
      "h2": {
        "ip": "10.0.3.2/24",
        "defaultRoute": "via 10.0.3.1"
      }
    }
    ,
    "switches": {
      "s1": {
        "cli_input": "s1-commands.txt"
      },
      "s2": {
        "cli_input": "s2-commands.txt"
      }
    }
    ,
    "routers": {
      "r1" :{
        "conf_path": "./routers_conf/", 
        "daemons" : {
        "zebra": {},
        "ospf": {}
       }
      }
      ,
      "r2" :{
        "conf_path": "./routers_conf/", 
        "daemons" : {
          "zebra": {},
          "ospf": {}
        }        
      }
    } 
  }
}